@model blog2.ViewModels.PostViewModel

<div class="container my-5">

    <div class="d-flex">
        <div>
            <span>@Model.Tags</span>
            <p class="display-2">@Model.Title</p>
            <span class="text-muted my-auto small me-2 ms-auto">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
        </div>
        <a class="btn btn-outline-primary my-auto ms-auto" href="~/edit/@Model.Id">Edit</a>
        <a asp-action="Delete" asp-controller="Blogs" asp-route-id="@Model.Id">Delete</a>
    </div>
    <span class="text-muted me-2">@Model.Author</span>
    <div class="d-flex">
        @if (Model.Edited == true)
        {
            <span class="text-muted">Edited</span>
        }
    </div>
    @Html.Raw(Model.Content)
</div>
